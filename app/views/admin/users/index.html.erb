<div class="row">
  <div class="col-md-6">
    <%= render :partial => 'shared/simple_search', :locals => { path: admin_users_path} %>
  </div>


  <div class="col-md-offset-4 col-md-2 top-action">
    <%= link_to content_tag(:span, '', :class => %w(glyphicon glyphicon-plus)).html_safe + content_tag(:span, t('New_User'), :class => "action-label").html_safe, new_admin_user_path, :class => %w(btn btn-primary btn-block) %>
  </div>

  <div class="col-xs-12">
    <div class="table-responsive">
      <table id="sample-table-1" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= t('Email') %></th>
            <th><%= t('First_name') %></th>
            <th><%= t('Last_name') %></th>
            <th><%= t('Admin') %></th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
                    <td><%= user.email %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= check_box_tag :_, '', user.admin?, disabled: true %></td>
                    <td>
                <div class='visible-md visible-lg hidden-sm hidden-xs btn-group'>
                  <!--<%= link_to admin_user_path(user) do %>-->
                    <!--<button class='btn btn-xs btn-success'><i class='icon-zoom-in bigger-120'></i></button>-->
                  <!--<% end %>-->
                  <%= link_to edit_admin_user_path(user) do %>
                    <button class='btn btn-xs btn-info'><i class='icon-edit bigger-120'></i></button>
                  <% end %>
                  <%= link_to admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <button class='btn btn-xs btn-danger'><i class='icon-trash bigger-120'></i></button>
                  <% end %>
                </div>

                <div class='visible-xs visible-sm hidden-md hidden-lg'>
                  <div class="inline position-relative">
                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown"><i class="icon-cog icon-only bigger-110"></i></button>
                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                      <!--<li>-->
                        <!--<%= link_to admin_user_path(user), :class => "tooltip-info" do %>-->
                          <!--<span class="blue"><i class="icon-zoom-in bigger-120"></i></span>-->
                        <!--<% end %>-->
                      <!--</li>-->
                      <li>
                        <%= link_to edit_admin_user_path(user), :class => "tooltip-success" do %>
                          <span class="green"><i class="icon-edit bigger-120"></i></span>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class => "tooltip-error" do %>
                          <span class="red"><i class="icon-trash bigger-120"></i></span>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </div>
                
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!--/.table-responsive-->
  </div><!--/span-->
</div><!--/row-->


