<div id="flashContainer" class="<%= defined?(container_class) ? container_class : 'col-sm-6'%>">
  <% flash.each do |name, msg| -%>
      <% if name == "alert" %>
          <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
            <strong><i class="icon-remove"></i> <%= t('Alert') %>!</strong>
            <%= msg %>
          </div>
      <% elsif name == "notice" %>
          <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
            <strong>Info</strong>
            <%= msg %>
          </div>
      <% end %>
  <% end -%>
</div>